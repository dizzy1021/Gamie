<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    tools:context=".ui.onboard.OnboardFragment">

    <TextView
        android:id="@+id/onboard_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:textSize="34sp"
        android:fontFamily="@font/teko_medium"
        android:text="@string/gamie" />

    <TextView
        android:id="@+id/onboard_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/onboard_desc" />

    <ImageView
        android:id="@+id/onboard_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboard_desc"
        android:src="@drawable/ic_vector_gaming"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:contentDescription="@string/onboard_illustration" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/onboard_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboard_illustration"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:text="@string/explore_now"
        app:backgroundTint="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>